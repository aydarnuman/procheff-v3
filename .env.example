# ================================
# Procheff v3 Environment Variables
# Copy this file to .env.local and fill in your values
# ================================

# -----------------------
# Core Configuration
# -----------------------
NODE_ENV=development
PORT=3001
DATABASE_PATH=./procheff.db

# -----------------------
# NextAuth Configuration
# -----------------------
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-here-min-32-chars

# -----------------------
# AI APIs (Required)
# -----------------------
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
DEFAULT_AI_MODEL=claude-sonnet-4-20250514

# Google Gemini API (for OCR)
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# =========================================
# AI CONFIGURATION
# =========================================
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=16000
AI_DEBUG=true

# =========================================
# APPLICATION
# =========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
API_BASE_URL="http://localhost:3000/api"
APP_NAME="procheff-v3"
APP_VERSION="3.0.0"
TIER="professional"

# =========================================
# FEATURES
# =========================================
ENABLE_IHALE_ANALYSIS=true
ENABLE_SMART_ANALYZE=true
ENABLE_MENU_MANAGEMENT=true
ENABLE_COST_CALCULATOR=true
ENABLE_OFFER_ENGINE=true
ENABLE_ANALYTICS=true

# =========================================
# FILE PROCESSING
# =========================================
MAX_DOCUMENT_SIZE_MB=50
OCR_ENABLED=true
PDF_PARSING_TIMEOUT=20000

# =========================================
# SCRAPER
# =========================================
SCRAPER_ENABLED=true
SCRAPER_CRON_SECRET="your-secure-cron-secret"
SCRAPER_ALERT_EMAIL="your-email@domain.com"
CRON_SECRET="your-secure-cron-secret"
SCRAPER_API_KEY="your-scraper-api-key"
SCRAPER_USE_API=true

# ƒ∞halebul.com Credentials
IHALEBUL_USERNAME="your-username"
IHALEBUL_PASSWORD="your-password"

# =========================================
# üÜï PRODUCTION-READY FEATURES
# =========================================

# -----------------------
# Redis (Optional - for Rate Limiting & Caching)
# -----------------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# -----------------------
# Feature Flags
# -----------------------
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_BATCH=true

# -----------------------
# Monitoring & Notifications (Optional)
# -----------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# -----------------------
# Production Settings (Cloud Run / Docker)
# -----------------------
# Uncomment for production deployment:
# NEXTAUTH_URL=https://procheff.app
# DATABASE_PATH=/app/data/procheff.db
# PORT=8080

# =========================================
# üìã FEATURE REQUIREMENTS
# =========================================
#
# Rate Limiting:
#   ‚úÖ Set ENABLE_RATE_LIMITING=true
#   ‚úÖ Configure Upstash Redis (UPSTASH_REDIS_REST_URL, UPSTASH_REDIS_REST_TOKEN)
#   üìÑ Sign up at: https://upstash.com
#
# Caching:
#   ‚úÖ Set ENABLE_CACHING=true
#   ‚úÖ Configure Upstash Redis (same as rate limiting)
#
# Batch Processing:
#   ‚úÖ Set ENABLE_BATCH=true
#   ‚ÑπÔ∏è  No additional dependencies (uses SQLite)
#
# Smart Alerting:
#   ‚úÖ Configure SLACK_WEBHOOK_URL
#   üìÑ Setup: https://api.slack.com/messaging/webhooks
#
# Notification Badge:
#   ‚ÑπÔ∏è  Always enabled, no configuration needed
#
# =========================================
# üöÄ QUICK START
# =========================================
#
# 1. Copy this file:
#    cp .env.example .env.local
#
# 2. Fill in required values (at minimum):
#    - ANTHROPIC_API_KEY or GEMINI_API_KEY
#    - TURSO_DATABASE_URL and TURSO_AUTH_TOKEN (if using Turso)
#
# 3. Optional: Enable production features:
#    - Set ENABLE_RATE_LIMITING=true and configure Upstash Redis
#    - Set ENABLE_CACHING=true (uses same Redis)
#    - Set ENABLE_BATCH=true for multi-file uploads
#    - Configure SLACK_WEBHOOK_URL for alerts
#
# 4. Restart your development server:
#    npm run dev
