{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/procheff.db": false,
    // Hide build/config files
    "**/next-env.d.ts": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/.turbo": true,
    // Hide deployment scripts (moved to scripts/)
    "**/deploy-*.sh": true,
    "**/install-doctl.sh": true,
    "**/cloudbuild.yaml": true,
    "**/docker-compose.*.yml": true,
    // Hide logs folder
    "**/logs": true,
    // Hide examples (if not actively used)
    "**/examples": true,
    // Hide backup databases
    "**/procheff.db.backup.*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true
  },

  "claude.enableContextLoading": true,
  "claude.contextFiles": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "files.associations": {
    "*.clinerules": "markdown"
  },
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "claudeCode.useTerminal": true,
  "claudeCodeChat.permissions.yoloMode": false,
  "claude-code.command": "/opt/homebrew/bin/claude",
  "claude-code.args": ["mcp"],
  "mcpServers": {
    "claude-code": {
      "command": "/opt/homebrew/bin/claude",
      "args": ["mcp"]
    }
  }
}
